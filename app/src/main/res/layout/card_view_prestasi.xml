<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_card_view_prestasi"
    android:backgroundTint="@android:color/transparent"
    >

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:textColor="@color/purple"
            android:text="Nama Lomba : LKS"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/tvNamaLomba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:textColor="@color/purple"
            android:text="Juara : 8"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/tvJuara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:textColor="@color/purple"
            android:text="Tingkat : Provinsi"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/tvTingkat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/purple"
            android:text="Tanggal : 17-04-2006"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/tvTanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>